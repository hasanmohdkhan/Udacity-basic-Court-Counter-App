<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="commonStyle">
        <item name="android:layout_marginBottom">@dimen/margin_eight</item>
        <item name="android:layout_marginEnd">@dimen/margin_tweentyfour</item>
        <item name="android:layout_marginLeft">@dimen/margin_tweentyfour</item>
        <item name="android:layout_marginStart">@dimen/margin_tweentyfour</item>
        <item name="android:layout_marginRight">@dimen/margin_tweentyfour</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayoutCommonStyle">
        <item name="android:layout_width">@dimen/linearlayout_width_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HeadingTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_sixteen</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/teamNameColor</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="ScoreTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_tweentyfour</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/scoreTextColor</item>
    </style>

    <style name="ViewStyle">
        <item name="android:layout_width">@dimen/view_width_1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_sixteen</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="ResetBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/margin_thirdtytwo</item>
        <item name="android:background">@color/resetButtonColor</item>
        <item name="android:text">@string/string_reset</item>
    </style>

</resources>